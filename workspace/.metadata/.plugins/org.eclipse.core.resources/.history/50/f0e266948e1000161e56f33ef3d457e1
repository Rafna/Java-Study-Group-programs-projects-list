/*Create below pattern
      1
      1  2  1
      1  2  1  3  1  2  1
      1  2  1  3  1  2  1  4  1  2  1  3  1  2  1
      1  2  1  3  1  2  1  4  1  2  1  3  1  2  1  5  1  2  1  3  1  2  1  4  1  2  1  3  1  2  1
     */ 
import java.util.Scanner;

public class PatternPrgm {
	public static void main(String args[]){
		int i=1,j=0,n,ctr;
		Scanner input=null;
		System.out.println("How many rows you need in the pattern? ");
		try{
			input=new Scanner(System.in);
			n=input.nextInt();
			if(n<=0){
				System.out.println("Patten cant be printed because wrong value entered and exiting system");
				System.exit(0);
			}
			else if(n==1){
				System.out.println("The required pattern:");
				System.out.print(i);
			}
			else{
				for(ctr=1;ctr<=n;ctr++){
					if(j==0){
						System.out.println(i);
						j++;
						break;
					}
					else{
						System.out.println(i+);
					}
				}
				ctr=ctr+1;
				j=i+1;
				System.out.print(i+" "+j+ " "+i);
				ctr=ctr+1;
				System.out.print(i+" "+j+" "+i+" "+(j+1)+" "i+" "+j+" "i);
				
			}
				
			if(n>1){
				for(ctr=1;ctr<=n;ctr++){
					for(j=i;j<=ctr;j++){
						System.out.print(j+" ");
					}
					System.out.println(i);
				}
				
			}
			else{
				System.out.println(i);
			}
			
		}
		finally{
			if(input!=null)
				input.close();
		}
	}

}
