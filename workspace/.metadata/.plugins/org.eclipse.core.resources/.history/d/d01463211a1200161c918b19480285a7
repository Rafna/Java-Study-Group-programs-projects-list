public class PatternPrgm {
 
static void rule(int i, String s, int depth) {
if(i > depth)
return;
else {
System.out.println();
if(s != null) {
System.out.print(s + " " + i + " " + s);
  
} else {
s = "";
System.out.print(i);
}
s = s + i + s;
rule(++i, s, depth); // recurse till depth is reached
}
}
 
 
static void getRule(int depth) {
rule(1, null, depth);
}
 
 
public static void main(String[] args) {
getRule(5);
}
}
